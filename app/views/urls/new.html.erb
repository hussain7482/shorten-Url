<h1>Shorten Your URL</h1>

<%= form_with(model: @url, url: urls_path, local: true, data: { turbo: false }) do |form| %>
  <% if @url.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@url.errors.count, "error") %> prohibited this URL from being saved:</h2>
      <ul>
        <% @url.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= form.label :original_url, "Enter a Long URL:" %>
    <%= form.text_field :original_url, placeholder: "https://example.com" %>
  </div>

  <div class="actions">
    <%= form.submit "Shorten" %>
  </div>
<% end %>


<% if @short_url %>
  <h2>Your Shortened URL:</h2>
  <p>
    <%= link_to @short_url, @short_url, target: "_blank" %>
  </p>
<% end %>